<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Nom</td>
            <td>Actions</td>
            
        </tr>
    </thead>
    <tbody>
        <% @categories.each do |category| %>
            <tr>
                <td><%= category.id %></td>
                <td><%= category.name %></td>
                <td>
                    <%= button_to "Editer", edit_category_path(category.id), method: :get, class:"btn btn-primary" %>
                    <%= button_to "Supprimer", category_path(category.id), method: :delete, class:"btn btn-danger" %>
                </td>
                
            </tr>
        <% end %>
    </tbody>
</table>
<p>
<%= button_to "Ajouter", new_category_path, method: :get, class:"btn btn-success" %>
