<h1>Alimentation</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <td>Marque</td>
            <td>Variété</td>
            <td>Actions</td>
            
        </tr>
    </thead>
    <tbody>
       <% @foods.each do |f| %>
            <tr>
                <td><%= f.brand %></td>
                <td><%= f.variety %></td>

                <td>
                    <%= button_to "Détails", food_path(f.id), method: :get, class:"btn" %>
                    <%= button_to "Editer", edit_food_path(f.id), method: :get, class:"btn btn-primary" %>
                    <%= button_to "Supprimer", food_path(f.id), method: :delete, class:"btn btn-danger" %>
                </td>
                
            </tr>
        <% end %>
    </tbody>
</table>
<p>
<%= button_to "Ajouter", new_food_path, method: :get, class:"btn btn-success" %>
</p>