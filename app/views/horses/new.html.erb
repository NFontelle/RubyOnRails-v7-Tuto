<h1> Ajouter un cheval </h1> 

<%= form_for @horse do |f| %>
    <div class="form-group">
        <label>Nom</label>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
        <label>Age</label>
        <%= f.number_field :age, class: 'form-control' %> ans
    </div>
    <div class="form-group">
        <label>Race</label>
        <%= f.text_field :breed, class: 'form-control' %>
    </div>
    <div class="form-group">
        <label>Taille</label>
        <%= f.number_field :size, class: 'form-control' %> cm
    </div>
   
    <div class="form-group">
        <label>Sexe</label>
        <%= f.text_field :sex, class: 'form-control' %>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Cr√©er</button>
    </div>
    
<% end %>
