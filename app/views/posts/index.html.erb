<h1>Articles</h1>

<% @posts.each do |post| %>

    <h2> <%= post.name %> </h2>

    <p><%= post.content %></p>

    <% if post.category %>
        <p>Cat√©gorie : <%= post.category.name %></p>
    <% end%>
    <% if !post.tags.empty? %>
        <p>tags : 
            <%= post.tags.map(&:name).join(', ') %>
        </p>
    <% end%>
    <p>
        <a href="<%= post_path(post.id) %>" class="btn btn-primary">Lire la suite</a>
        <a href="<%= edit_post_path(post.id) %>" class="btn btn-default">Modifier</a>
        <%= button_to "Supprimer", {:controller => :posts, :action => 'destroy', :id => post.id, data: { confirm: "etes vous sur ?" }}, method: :delete, class:"btn btn-danger" %>


       
    </p>


<% end %>

<p>
    <a href="<%= new_post_path %>" class="btn btn-info">Ajouter</a>
</p>