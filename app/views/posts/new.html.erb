<h1> Créer un nouvel article </h1> 

<%= form_for @post do |f| %>
    <div class="form-group">
        <label>Titre</label>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
        <label>Contenu</label>
        <%= f.text_area :content, class: 'form-control' %>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Créer</button>
    </div>
    
<% end %>